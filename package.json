{
  "name": "ashtrail",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:website": "bun run --cwd apps/website dev",
    "dev:dev-tools": "bun run --cwd apps/dev-tools dev",
    "build:website": "bun run --cwd apps/website build",
    "build:dev-tools": "bun run --cwd apps/dev-tools build"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.2.0",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "autoprefixer": "^10.4.24",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.2.0"
  }
}
